# ===== Flutter project linguist settings =====

# Hide C++/CMake (desktop build stuff)
*.cpp linguist-detectable=false
*.cc linguist-detectable=false
*.cxx linguist-detectable=false
*.c linguist-detectable=false
*.h linguist-detectable=false
CMakeLists.txt linguist-detectable=false

# Dart (main language)
*.dart linguist-detectable=true

# Android
*.java linguist-detectable=true
*.kt linguist-detectable=true
*.xml linguist-detectable=true

# iOS
*.swift linguist-detectable=true
*.m linguist-detectable=true
*.mm linguist-detectable=true

# Web
*.html linguist-detectable=true
*.js linguist-detectable=true
*.css linguist-detectable=true

# Config / scripts
*.yaml linguist-detectable=true
*.gradle linguist-detectable=false
*.lock linguist-detectable=false

# Ignore build / generated
/build/* linguist-vendored
/.dart_tool/* linguist-vendored
/.idea/* linguist-vendored
/.vscode/* linguist-vendored
/.packages linguist-vendored